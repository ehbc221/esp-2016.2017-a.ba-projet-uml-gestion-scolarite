{% extends '::base.html.twig' %}

{% block title %} Acceuil {% endblock %}

{% block contentPage %}
<div ng-controller="globalStatCtrl">
     <div class = "row">
        <div class = "col-lg-2">
           <div class="card blue">
             <div class="card-heading">
                <h2>Génie Info</h2>
                <h1>25%</h1>
             </div>
           </div>
        </div>
        <div class = "col-lg-2">
           <div class="card red">
             <div class="card-heading">
                <h2>Génie Mécanique</h2>
                <h1>25%</h1>
             </div>
           </div>
        </div>
        <div class = "col-lg-2">
           <div class="card yellow">
             <div class="card-heading">
                <h2>Gestion</h2>
                <h1>25%</h1>
             </div>
           </div>
        </div>
        <div class = "col-lg-2">
