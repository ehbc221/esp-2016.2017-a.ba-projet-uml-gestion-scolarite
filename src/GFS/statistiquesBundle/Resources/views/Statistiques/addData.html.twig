    <div class="alert alert-success"><div class="col-sm-1"><span class="glyphicon glyphicon-ok form-control-feedback"></span></div> <b>{{ message }}</b></div>
  {% endfor %}
  <div class="col-lg-8 col-lg-offset-2" ng-controller="statistiquesCtrl">
