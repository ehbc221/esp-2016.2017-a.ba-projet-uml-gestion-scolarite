                    }
                    }) 
                }}
                <br>
                {{ form_label(etudiantForm.option) }}
                {{ form_widget(etudiantForm.option, {
                    'attr' : {
                        'ng-model' : 'idOption',
                        'ng-blur' : 'getFormationsOption()'
                    },
                    }) 
                }}
                <br>
                {{ form_label(etudiantForm.formation) }}
                {{ form_widget(etudiantForm.formation, {
                    'attr' : {
                        'ng-model' : 'formation',
                    },
                    }) 
