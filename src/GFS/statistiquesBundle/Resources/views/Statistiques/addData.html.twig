            {{ form_start(etudiantForm, {'action': path('gfs_statistiques_addData'), 'method': 'post'}) }}
                {{ form_label(etudiantForm.departement) }}
                {{ form_widget(etudiantForm.departement, {
                    'attr' : {
                        'ng-model' : 'idDepartement',
